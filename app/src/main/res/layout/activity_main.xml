<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:hint="Ввод"
        android:textAlignment="center"
        android:textSize="30sp"
        android:inputType="number"
        android:textStyle="italic"/>

    <Button
        android:layout_margin="1dp"
        android:padding="5dp"
        android:text="1" />

    <Button
        android:layout_margin="1dp"
        android:padding="5dp"
        android:text="2" />


    <Button
        android:layout_margin="1dp"
        android:padding="5dp"
        android:text="3" />


    <Button
        android:layout_margin="1dp"
        android:background="#72FFE0E0"
        android:padding="5dp"
        android:text="+"

        />

    <Button
        android:layout_margin="1dp"
        android:padding="5dp"
        android:text="4" />

    <Button
        android:layout_margin="1dp"
        android:padding="5dp"

        android:text="5" />


    <Button
        android:layout_margin="1dp"
        android:padding="5dp"
        android:text="6" />


    <Button
        android:layout_margin="1dp"
        android:background="#72FFE0E0"
        android:padding="5dp"
        android:text="-" />

    <Button
        android:layout_margin="1dp"
        android:padding="5dp"
        android:text="7" />


    <Button
        android:layout_margin="1dp"
        android:padding="5dp"
        android:text="8" />


    <Button
        android:layout_margin="1dp"
        android:padding="5dp"
        android:text="9" />

    <Button
        android:layout_margin="1dp"
        android:background="#72FFE0E0"
        android:padding="5dp"
        android:text="=" />

    <Button
        android:layout_margin="1dp"
        android:padding="5dp"
        android:text="0" />

    <Button
        android:layout_margin="1dp"
        android:background="#72FFE0E0"
        android:padding="5dp"
        android:text="x" />

    <Button
        android:layout_margin="1dp"
        android:background="#72FFE0E0"
        android:padding="5dp"
        android:text="/" />

    <Button
        android:layout_margin="1dp"
        android:background="#72FFE0E0"
        android:padding="5dp"
        android:text="." />


</GridLayout>
